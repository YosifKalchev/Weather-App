<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:padding="25dp">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/addressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/sbSearch"
                style="@style/ThemeOverlay.SearchView" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Sofia, BG"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/tv_updated_at"
                style="@style/smallText"
                android:hint="20 April 2012, 20:08 PM"
                android:paddingTop="@dimen/padding_small" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_overviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                style="@style/smallText"
                android:layout_gravity="center"
                android:hint="Clear sky"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:hint="29Â°C"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/xl_text_size" />

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_temp_min"
                    style="@style/smallText"
                    android:hint="Min Temp: 05:05 AM" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_temp_max"
                    style="@style/smallText"
                    android:hint="Max Temp: 05:05 PM" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout style="@style/linearLayout">

                <LinearLayout style="@style/smallLinearLayout">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/sunrise"
                        tools:ignore="ContentDescription" />

                    <Space style="@style/smallSpace" />

                    <TextView
                        android:id="@+id/tv_sunrise"
                        style="@style/itemType"
                        android:hint="Sunrise" />

                    <TextView
                        android:id="@+id/tv_sunrise_value"
                        style="@style/itemSubType"
                        android:hint="06:40 AM" />
                </LinearLayout>

                <Space style="@style/mediumSpace" />

                <LinearLayout style="@style/smallLinearLayout">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/sunset" />

                    <Space style="@style/smallSpace" />

                    <TextView
                        android:id="@+id/tv_sunset"
                        style="@style/itemType"
                        android:hint="Sunset" />

                    <TextView
                        android:id="@+id/tv_sunset_value"
                        style="@style/itemSubType"
                        android:hint="06:40 AM" />
                </LinearLayout>

                <Space style="@style/mediumSpace" />

                <LinearLayout style="@style/smallLinearLayout">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/wind" />

                    <Space style="@style/smallSpace" />

                    <TextView
                        android:id="@+id/tv_wind"
                        style="@style/itemType"
                        android:hint="Wind" />

                    <TextView
                        android:id="@+id/tv_wind_value"
                        style="@style/itemSubType"
                        android:hint="06:40 AM" />

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <LinearLayout style="@style/linearLayout">

                <LinearLayout style="@style/smallLinearLayout">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/pressure" />

                    <Space style="@style/smallSpace" />

                    <TextView
                        android:id="@+id/tv_pressure"
                        style="@style/itemType"
                        android:hint="Pressure" />

                    <TextView
                        android:id="@+id/tv_pressure_value"
                        style="@style/itemSubType"
                        android:hint="06:40 AM" />
                </LinearLayout>

                <Space style="@style/mediumSpace" />

                <LinearLayout style="@style/smallLinearLayout">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/humidity" />

                    <Space style="@style/smallSpace" />

                    <TextView
                        android:id="@+id/tv_humidity"
                        style="@style/itemType"
                        android:hint="Humidity" />

                    <TextView
                        android:id="@+id/tv_humidity_value"
                        style="@style/itemSubType"
                        android:hint="06:40 AM" />
                </LinearLayout>

                <Space style="@style/mediumSpace" />

                <LinearLayout style="@style/smallLinearLayout">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/info" />

                    <Space style="@style/smallSpace" />

                    <TextView
                        style="@style/itemType"
                        android:hint="Created By" />

                    <TextView
                        android:id="@+id/about"
                        style="@style/itemSubType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Y Kalchev" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Something went wrong"
        android:visibility="gone" />


</RelativeLayout>